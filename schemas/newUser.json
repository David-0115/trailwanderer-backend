{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "username",
        "password",
        "firstName",
        "lastName",
        "email"
    ],
    "properties": {
        "username": {
            "type": "string",
            "default": "",
            "title": "The username Schema",
            "minLength": 3,
            "maxLength": 30,
            "examples": [
                "myusername"
            ]
        },
        "password": {
            "type": "string",
            "default": "",
            "title": "The password Schema",
            "minLength": 5,
            "maxLength": 30,
            "examples": [
                "mypassword"
            ]
        },
        "firstName": {
            "type": "string",
            "default": "",
            "title": "The firstName Schema",
            "minLength": 1,
            "maxLength": 30,
            "examples": [
                "first name"
            ]
        },
        "lastName": {
            "type": "string",
            "default": "",
            "title": "The lastName Schema",
            "minLength": 1,
            "maxLength": 30,
            "examples": [
                "last name"
            ]
        },
        "email": {
            "type": "string",
            "default": "",
            "title": "The email Schema",
            "maxLength": 60,
            "examples": [
                "example@example.com"
            ]
        },
        "profileImagePath": {
            "type": "string",
            "default": "",
            "title": "The profileImagePath Schema",
            "examples": [
                "assets/profileImg/username.png"
            ]
        }
    },
    "examples": [
        {
            "username": "myusername",
            "password": "mypassword",
            "firstName": "first name",
            "lastName": "last name",
            "email": "example@example.com",
            "profileImagePath": "assets/profileImg/username.png"
        }
    ]
}